<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:UltimaApp"
             x:Class="UltimaApp.MainPage"
             >
    
    <StackLayout Orientation="Vertical" Margin="5,15,5,5">
        <Image VerticalOptions="StartAndExpand"  
            Source="http://i.imgur.com/TG8VY.png"/>

        <StackLayout
        Orientation="Vertical"
        VerticalOptions="Center" Margin="5,5,5,5" Padding="0,0,0,150">


            <Entry
            x:Name="entryUser"
            Placeholder="Nombre de usuario"/>

        <Entry
            x:Name="entryPasword"
            IsPassword="True"
            Placeholder="Constraseña"/>

        <Button
            Text="Ingresar"
            BackgroundColor="Black"
            TextColor="White"
            Clicked="ButtonClicked"/>

        <Button
            Text="Registrarse"
            BackgroundColor="Black"
            TextColor="White"
            Clicked="ButtonRegistro"/>


    </StackLayout>
    </StackLayout>
</ContentPage>
