<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UltimaApp.Registro">
    <ContentPage.Content>

        <StackLayout Orientation="Vertical" Margin="5,15,5,5">
            <Image VerticalOptions="StartAndExpand"  
            Source="http://3.bp.blogspot.com/-b9JvWcvYPOg/VNPvvUJjhUI/AAAAAAAAADA/WOEMGx18HKY/s1600/Bienvenidos.jpg"/>

            <StackLayout
        Orientation="Vertical"
        VerticalOptions="Center">

            <Entry
            x:Name="entryUser"
            Placeholder="Nombre de usuario"/>

            <Entry
            x:Name="entryPasword"
            IsPassword="True"
            Placeholder="Constraseña"/>

                <Entry
            x:Name="entryUserNick"
            Placeholder="Nick Name"/>

                <Entry
            x:Name="entryemail"
            Placeholder="Correo"/>
                
                
                <Button
            Text="Registrar"
            BackgroundColor="Black"
            TextColor="White"
            Clicked="ClickCreateUser"/>

            <Button
            Text="Menu"
            BackgroundColor="Black"
            TextColor="White"
            Clicked="ButtonMenu"/>


            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>